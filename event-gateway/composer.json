{
    "name": "sdpmlab/event-gateway",
    "type": "project",
    "description": "Event Gateway combining Anser-Gateway and Anser-EDA capabilities",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.4",
        "vlucas/phpdotenv": "^5.5",
        "workerman/workerman": "^4.1",
        
        "sdpmlab/anser": "^0.2.6",
        
        "predis/predis": "^2.2",
        "php-amqplib/php-amqplib": "^3.5",
        
        "ramsey/uuid": "^4.7",
        "zumba/json-serializer": "^3.0",
        
        "google/protobuf": "^3.25",
        "grpc/grpc": "^1.57",
        
        "prooph/event-store": "^7.10",
        "prooph/pdo-event-store": "^1.16",
        "prooph/service-bus": "^6.2"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/_support",
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@php spark cache:clear"
        ],
        "test": "phpunit"
    },
    "support": {
        "repository": "https://github.com/sdpm-lab/Anser-Gateway"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}